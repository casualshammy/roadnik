<?xml version="1.0" encoding="utf-8" ?>
<tookit:CContentPage 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:Roadnik.MAUI.ViewModels"
    xmlns:tookit="clr-namespace:Roadnik.MAUI.Toolkit"
    xmlns:controls="clr-namespace:Roadnik.MAUI.Controls"
    xmlns:converters="clr-namespace:Roadnik.MAUI.Converters"
    x:Class="Roadnik.MAUI.Pages.MainPage"
    Title="{Binding Title}"
    Shell.NavBarIsVisible="False">

    <ContentPage.BindingContext>
        <views:MainPageViewModel />
    </ContentPage.BindingContext>
    <ContentPage.Resources>
        <converters:MultiBoolConverter x:Key="MultiBoolConverter" />
    </ContentPage.Resources>

    <AbsoluteLayout>
        <!--CanShowRegilarView-->
        <tookit:InteractableWebView
            IsVisible="{Binding CanShowRegilarView}"
            x:Name="p_webView"
            Source="{Binding WebViewUrl}"
            AbsoluteLayout.LayoutFlags="All"  
            AbsoluteLayout.LayoutBounds="0,0,1,1"
            Navigating="MainWebView_Navigating"
            Navigated="MainWebView_Navigated">
        </tookit:InteractableWebView>
        <controls:Spinner
            AbsoluteLayout.LayoutFlags="PositionProportional"
            AbsoluteLayout.LayoutBounds="0.5, 0.1, 50, 50">
            <controls:Spinner.IsVisible>
                <MultiBinding Converter="{StaticResource MultiBoolConverter}">
                    <Binding Path="CanShowRegilarView" />
                    <Binding Path="IsSpinnerRequired" />
                </MultiBinding>
            </controls:Spinner.IsVisible>
        </controls:Spinner>

        <Grid
            IsVisible="{Binding CanShowRegilarView}"
            AbsoluteLayout.LayoutFlags="PositionProportional"
            AbsoluteLayout.LayoutBounds="0.95, 0.95, 140, 130">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="10" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <Grid 
                Grid.Row="0"
                Grid.Column="1">
                <Button
                    WidthRequest="50"
                    HeightRequest="50"
                    CornerRadius="45"
                    HorizontalOptions="Center"
                    Background="{StaticResource PrimaryBrush}"
                    Clicked="Share_Clicked"
                    SemanticProperties.Description="{Binding ShareButtonDescription}">
                </Button>
                <ImageButton 
                    Margin="0,0,5,0"
                    WidthRequest="30"
                    HeightRequest="30"
                    Source="share.svg"
                    InputTransparent="True"/>
            </Grid>

            <Grid 
                Grid.Row="2"
                Grid.Column="0">
                <Button
                    WidthRequest="50"
                    HeightRequest="50"
                    CornerRadius="45"
                    HorizontalOptions="Center"
                    Background="{StaticResource PrimaryBrush}"
                    Clicked="GoToMyLocation_Clicked"
                    SemanticProperties.Description="{Binding GoToMyLocationButtonDescription}">
                </Button>
                <ImageButton 
                    x:Name="p_goToMyLocationImage"
                    WidthRequest="40"
                    HeightRequest="40"
                    Source="my_location.svg"
                    InputTransparent="True"/>
            </Grid>

            <Grid Grid.Row="2"
                  Grid.Column="1">
                <Button
                    x:Name="p_startRecordButton"
                    WidthRequest="70"
                    HeightRequest="70"
                    CornerRadius="45"
                    Background="{StaticResource PrimaryBrush}"
                    Clicked="FAB_Clicked"
                    SemanticProperties.Description="{Binding StartPublishButtonDescription}">
                </Button>
                <ImageButton 
                    WidthRequest="70"
                    HeightRequest="70"
                    Source="record_rec.svg"
                    InputTransparent="True"/>
            </Grid>

        </Grid>

        <!--IsInBackground-->
        <Grid
            IsVisible="{Binding IsInBackground}"
            AbsoluteLayout.LayoutFlags="All"
            AbsoluteLayout.LayoutBounds="0, 0, 1, 1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="100" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <Image 
                Grid.Row="0"
                Grid.ColumnSpan="2"
                BackgroundColor="{AppThemeBinding Light=White, Dark=White}"
                Source="cog_box.svg"
                HorizontalOptions="FillAndExpand" />

            <VerticalStackLayout 
                Grid.Row="1"
                Grid.ColumnSpan="2"
                Margin="10, 20">
                <Label 
                    Grid.Row="1"
                    Grid.ColumnSpan="2"
                    Margin="10, 20"
                    HorizontalTextAlignment="Center"
                    Text="{Binding IsInBackgroundDescription}" />
            </VerticalStackLayout>

        </Grid>

        <!-- Shell Button -->
        <Button
            AbsoluteLayout.LayoutFlags="None"
            AbsoluteLayout.LayoutBounds="-5, 30, 50, 50"
            WidthRequest="100"
            HeightRequest="50"
            CornerRadius="25"
            Background="{StaticResource Black}"
            Opacity="0.7"
            Clicked="ShellOpen_Clicked"
            SemanticProperties.Description="{Binding OpenFlyoutButtonDescription}" />
        <ImageButton 
            AbsoluteLayout.LayoutFlags="None"
            AbsoluteLayout.LayoutBounds="10, 30, 50, 50"
            WidthRequest="36"
            HeightRequest="36"
            Source="hamburger_button.svg"
            InputTransparent="True"/>

    </AbsoluteLayout>


</tookit:CContentPage>
