<Project Sdk="Microsoft.NET.Sdk.Web">

		<PropertyGroup>
				<OutputType>Exe</OutputType>
				<TargetFramework>net8.0</TargetFramework>
				<ImplicitUsings>enable</ImplicitUsings>
				<Nullable>enable</Nullable>
				<ApplicationIcon>favicon.ico</ApplicationIcon>
				<LangVersion>latest</LangVersion>
				<PublishAot>true</PublishAot>
				<AssemblyName>roadnik-server</AssemblyName>
		</PropertyGroup>

		<ItemGroup>
				<Content Include="favicon.ico" />
		</ItemGroup>

		<ItemGroup>
				<PackageReference Include="Ax.Fw.Storage" Version="13.0.197" />
				<PackageReference Include="JustLogger" Version="3.0.1" />
				<PackageReference Include="MimeMapping" Version="2.0.0" />
				<PackageReference Include="System.Linq.Async" Version="6.0.1" />
				<PackageReference Include="FluentArgs" Version="0.9.7" />
		</ItemGroup>

		<ItemGroup>
				<ProjectReference Include="..\Roadnik.Common\Roadnik.Common.csproj" />
		</ItemGroup>

</Project>
